@model SocialNetWork.Models.Post

@{
    ViewData["Title"] = "CreateForCircle";
}

<h1>CreateForCircle</h1>

<h4>Post</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="CreateForCircle">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="WallId" class="control-label"></label>
                <input asp-for="WallId" class="form-control" />
                <span asp-validation-for="WallId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Text" class="control-label"></label>
                <input asp-for="Text" class="form-control" />
                <span asp-validation-for="Text" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ImgUri" class="control-label"></label>
                <input asp-for="ImgUri" class="form-control" />
                <span asp-validation-for="ImgUri" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Feed" asp-controller="User">Back to Feed</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
